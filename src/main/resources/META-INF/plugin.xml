<idea-plugin require-restart="true">
    <id>com.zlf.java-code-helper.plugin</id>
    <name>Java Code Helper</name>
    <version>1.9.3</version>
    <vendor>zhanglinfeng</vendor>
    <idea-version since-build="192.6817.14"/>
    <description><![CDATA[
        <p>For learning plug-in development。Exchange ideas 、 Feed back BUG：<a href="https://gitee.com/zlfzh/javaCodeHelper/issues" target="_blank">Gitee</a></p>
        <p>Source code and function introduction：<a href="https://gitee.com/zlfzh/javaCodeHelper" target="_blank">Gitee</a></p>
        <p>很蛋疼，官方要求必须英文开始</p>
        <p>用于学习插件开发。交流想法、反馈BUG ：<a href="https://gitee.com/zlfzh/javaCodeHelper/issues" target="_blank">Gitee</a></p>
        <p>源码、功能介绍：<a href="https://gitee.com/zlfzh/javaCodeHelper" target="_blank">Gitee</a></p>
    ]]>
    </description>
    <change-notes><![CDATA[
        <p>See the <a href="https://gitee.com/zlfzh/javaCodeHelper#%E7%89%88%E6%9C%AC%E6%94%B9%E5%8A%A8" target="_blank">gitee</a> for more details and history</p>
    ]]>
    </change-notes>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- 快捷跳转 -->
        <codeInsight.lineMarkerProvider language="JAVA" implementationClass="pers.zlf.plugin.marker.FeignFastJumpProvider"/>
        <codeInsight.lineMarkerProvider language="JAVA" implementationClass="pers.zlf.plugin.marker.MapperFastJumpProvider"/>
        <codeInsight.lineMarkerProvider language="XML" implementationClass="pers.zlf.plugin.marker.XmlFastJumpProvider"/>
        <!-- sql to java -->
        <toolWindow id="JavaCodeHelper" secondary="false" anchor="right" icon="/icon/logo.svg" factoryClass="pers.zlf.plugin.factory.SqlFactory"/>
        <!-- 配置持久化 -->
        <applicationService serviceImplementation="pers.zlf.plugin.config.ConfigComponent"/>
        <!-- 配置面板 -->
        <applicationConfigurable id="JavaCodeHelpConfigurable" instance="pers.zlf.plugin.config.CommonConfigurable"/>
        <applicationConfigurable parentId="JavaCodeHelpConfigurable" instance="pers.zlf.plugin.config.FastJumpConfigurable"/>
        <applicationConfigurable parentId="JavaCodeHelpConfigurable" instance="pers.zlf.plugin.config.CodeStatisticsConfigurable"/>
        <!-- 代码补全 -->
        <completion.contributor language="JAVA" implementationClass="pers.zlf.plugin.completion.CodeCompletionContributor"/>
        <!-- 代码检查 -->
        <localInspection language="JAVA" level="WARNING" groupName="JavaCodeHelper" displayName="MethodCheck" enabledByDefault="true" implementationClass="pers.zlf.plugin.inspection.MethodInspectionTool"/>
        <!-- 更改文件夹备注 -->
        <projectViewNodeDecorator implementation="pers.zlf.plugin.node.CodeLinesCountDecorator"/>
        <!-- 监听文件改动 -->
        <postStartupActivity implementation="pers.zlf.plugin.monitoring.FileStartupActivity"/>
    </extensions>

    <actions>
        <!-- 翻译 -->
        <action id="JavaCodeHelper.TranslateAction" class="pers.zlf.plugin.action.TranslateAction" text="翻译" icon="/icon/logo.svg">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
        <!-- 根据注释添加Swagger注解 -->
        <action id="JavaCodeHelper.AddApiAnnotationAction" class="pers.zlf.plugin.action.AddApiAnnotationAction" text="添加接口文档注解" icon="/icon/logo.svg">
            <add-to-group group-id="EditorPopupMenu" anchor="after" relative-to-action="JavaCodeHelper.TranslateAction"/>
        </action>
        <!-- 统计代码行数 -->
        <action id="JavaCodeHelper.CodeLineCountAction" class="pers.zlf.plugin.action.CodeLineCountAction" text="统计代码行数" icon="/icon/logo.svg">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
        </action>
        <!-- 根据git记录，统计代码贡献率 -->
        <action id="JavaCodeHelper.ContributionRateAction" class="pers.zlf.plugin.action.ContributionRateAction" text="统计贡献率" icon="/icon/logo.svg">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after" relative-to-action="JavaCodeHelper.CodeLineCountAction"/>
        </action>
    </actions>
</idea-plugin>
